/* pages/otherHome/otherHome.wxss */
.avatar_big{
  width: 100%;
  /* height: 346.32rpx; */
  background-size: 100% 100%;
  display: flex;
  background-repeat: no-repeat;
  flex-direction: column;
  align-items: center;
  position: relative
}
.avatar_big>image{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1
}
.avatar_big .touxiang{
  position: relative;
  height: 149.76rpx;
  margin-top: 70rpx;
}
.avatar_big .avatar_sm{
  width: 149.76rpx;
  height: 149.76rpx;
  border-radius: 50%;
  overflow: hidden;
}
.avatar_big .follow{
  width: 49.14rpx;
  height: 42.12rpx; 
  position: absolute;
  right: -98.28rpx;
  bottom: 50%;
  transform: translateY(21.06rpx) 
}
.avatar_big .name{
  background-color: rgba(66,66,66,.35);
  color: #fff;
  font-size: 32.76rpx;
  padding: 9.36rpx 16.38rpx;
  margin-top: 46.8rpx;
  border-radius: 117rpx;
}
.avatar_big .name image{
  width: 30.42rpx;
  height: 30.42rpx;
  padding-left: 11.7rpx
}
.avatar_big .school{
  color: #fff;
  font-size: 28.08rpx;
  margin-top: 23.4rpx;
  padding-bottom: 46.8rpx;
  width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center
}
.catTab{
  width: 100%;
  height: 93.6rpx;
  display: flex;
  align-items: center;
  position: relative;
  background: #FFFFFF;
  box-shadow: 0px 2px 4px 0px rgba(65,65,65,0.35);
  margin-bottom: 23.4rpx
}
.catTab::after{
  content: "";
  position: absolute;
  left: 50%;
  width: 1px;
  height: 35.1rpx;
  background-color: #d8d8d8;
  top: 50%;
  transform: translateY(-50%)
}
.catTab view{
  text-align: center;
  width: 50%;
  color: #333;
  font-size: 32.76rpx
}
.catTab view.active{
  color: #34C289
}
.wrap{
  background: #FFFFFF;
  box-shadow: 0px 2px 8px 0px rgba(66,66,66,0.35);
  width: 702rpx;
  margin: 0 auto;
  margin-bottom: 23.4rpx;
  overflow: hidden;
}
.bot{
  padding: 35.1rpx 0; 
}
.wrap>.image{
  width: 100%;
  height: 360.36rpx;
  overflow: hidden;
  text-align: center;
  position: relative
}
.wrap .bookName{
  color: #333;
  font-size: 32.76rpx;
  padding-left: 23.4rpx;
}
.bookName text{
  color: #34C289;
  font-size: 23.4rpx;
  padding-left: 11.7rpx
}
.wrap .time{
  color: #999;
  font-size: 28.08rpx;
  padding-left: 23.4rpx;
  padding-top: 30.42rpx;
  display: flex;
  align-items: center;
  justify-content: space-between
}
.wrap .time .price{
  color: #E92A2F;
  font-size: 37.44rpx;
  padding-right: 23.4rpx
}