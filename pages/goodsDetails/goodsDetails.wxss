.btn{
  background: #34C289;
  line-height: 114.66rpx;
  color: #fff;
  text-align: center;
  font-size: 37.44rpx;
  border: none;
  width: 100%;
  border-radius:0 
}
page{
  height: 100%;
  background-color: #fff
}
.wrap{
  padding:0 23.4rpx
}
.wrap_t{
  margin-right: -23.4rpx
}
.line{
  height: 1px;
  background-color: #d8d8d8;
  width: 100%;
  margin-left: -23.4rpx;
  padding-right: 46.8rpx
}
input{
  height: 102.96rpx;
  font-size: 32.76rpx;
  color: #999;
}
.category{
  display: flex;
  flex-wrap:wrap;
  width: 100%;
  padding-top: 35.1rpx;
  padding-bottom: 11.7rpx;
}
.category .cate{
  white-space: normal;
  padding: 16.38rpx 23.4rpx;
  font-size: 28.08rpx;
  color: #34C289;
