  margin-left: 127.53rpx
}
.com .top{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 35.1rpx 0;
  width: 100%;
}
.com .top image{
  width: 79.56rpx;
  height: 79.56rpx;
  border-radius: 50%;
}
.com .top .userName{
  flex-grow: 1;
  margin-left: 35.1rpx;
  font-size: 37.44rpx;
  color: #333333;
}
.com .time{
  color: #999;
  font-size: 32.76rpx;
  padding-left: 127.53rpx;
