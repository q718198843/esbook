.share{
  height: 322.92rpx;
  width: 100%;
  position: fixed;
  left: 0;
  bottom: -500rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column
}
.share image{
  width: 84.24rpx;
  height: 84.24rpx;
  border-radius: 50%;
  margin-top: 46.8rpx;
  margin-bottom: 23.4rpx
}
.share .title{
  font-size: 32.76rpx;
  color: #333;
}
.share .fs{
  font-size: 28.08rpx;
