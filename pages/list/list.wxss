/* pages/list/list.wxss */
@import "/pages/shopList/shopList.wxss";
page{
  background-color: #fff;
}
.header{
  background-color: #fff;
  height:70rpx;
  border: 1px solid #d8d8d8;
  margin: 11.7rpx;
  line-height: 70rpx;
  display: flex;
  align-items: center;
  border-radius: 11.7rpx;
  color: #999
}
.header image{
  width: 46.8rpx;
  height: 46.8rpx;
  margin: 0 23.4rpx
}
.list_tab{
  width: 100%;
  background: #FFFFFF;
  display: flex;
  position: relative;
  border-top: 1px solid #d8d8d8;
  border-bottom: 1px solid #d8d8d8;
  justify-content: space-around;
}
.list_tab .tab{
  text-align: center;
  line-height: 102.96rpx;
  font-size: 32.76rpx;
  color: #666;
}
